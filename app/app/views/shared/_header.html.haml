.navbar.navbar-fixed-top.navbar-inverse
  .navbar-inner
    .container-fluid
      %a.brand(href="/") Festivus
      .nav-collapse
        %ul.nav
          %li
            = link_to 'Home', '#'
      .pull-right
        .nav
          - if user_signed_in?
            .btn-group
              = link_to "#", { class: 'btn btn-inverse', 'data-toggle' => 'dropdown' } do
                %i{ class: 'icon-user'}
                %span.caret

              %ul.dropdown-menu
                %li= link_to "sign out", destroy_user_session_path, :method => 'delete'

          - else
            = link_to "Login", new_user_session_path, class: 'btn btn-success'
            = link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary'
